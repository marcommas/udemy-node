<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
                    <% if(validacao.length > 0) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-danger">
                                    <strong>Atenção!</strong>
                                    <ul>
                                    <% for(var i=0; i < validacao.length ;i++){ %>
                                        <li>
                                            <%= validacao[i].msg %>
                                        </li>
                                    <% } %>
                                    <ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
			
	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/noticias/salvar" method="post">
						<div class="form-group">
							<label for="titulo">Nome:</label>
							<input type="text" class="form-control" id="brf_nome" name="brf_nome" value="<%=noticia.brf_nome%>" />
						</div>

						<div class="form-group">
							<label for="pwd">CPF:</label>
							<input type="text" class="form-control" id="brf_cpf_cnpj" name="brf_cpf_cnpj" value="<%=noticia.brf_cpf_cnpj%>" />
						</div>
						
						<div class="form-group">
							<label for="pwd">Endereço:</label>
							<input type="text" class="form-control" id="brf_endereco_logradouro" name="brf_endereco_logradouro" value="<%=noticia.brf_endereco_logradouro%>" />
						</div>

						<div class="form-group">
							<label for="pwd">Data Nascimento:</label>
							<input type="date" class="form-control" id="brf_data_nascimento" name="brf_data_nascimento"  value="<%=noticia.brf_data_nascimento%>" />
						</div>


						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>